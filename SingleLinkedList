#include <iostream>
using namespace std;

struct Node{
    int data;
    Node * next;
};

/*傳雙重指標是為了在主程式中也要改變head所指向的東西*/
void singleLinkedList(Node ** head,int pos,int data){
    
    struct Node * temp;
    struct Node * pre;
    Node * newNode = new Node();
    newNode->data=data;
    temp=*head;
    int k=1;
    
    // cout<<"s"<<pos<<"s"<<endl;
    
    //若head節點還沒new空間時
    if(!temp){
        *head=newNode;
        return;
    }
    
    //若插入位置為1
    if(pos==1){
        newNode->next=temp;
        *head=newNode;
        return;
    }
    else{
        
        //若插入在最後面時，必須到達最後節點的後面一個
        while((k<pos) && temp!=NULL){
            k++;
            pre=temp;
            temp=temp->next;
        }
        
        newNode->next=temp;
        pre->next=newNode;
    }
    
}

void deleteList(Node ** head,int pos){
    
    struct Node * temp,* cur;
    temp=*head;
    int k=1;
    
    if(pos==1){
        temp=temp->next;
        *head=temp;
        return;
    }else{
        
        while((k<pos)&&temp!=NULL){
            k++;
            cur=temp;
            temp=temp->next;
        }
        
        if(temp->next){
            cur->next=temp->next;
        }
        else{
            cur->next=NULL;
        }
    }
}



int main()
{
    
    Node * head;
    singleLinkedList(&head,1,1);
    singleLinkedList(&head,1,2);
    singleLinkedList(&head,1,3);
    singleLinkedList(&head,1,4);
    
    deleteList(&head,4);
    
    // head->data=1;
    
    // Node * head1=new Node();
    // head1->data=2;
    
    // Node * head2=new Node();
    // head2->data=3;
    
    // head->next=head1;
    // head1->next=head2;
    
    // cout<<head<<"ssss"<<endl;
    // singleLinkedList(&head,4,5);
    // cout<<head<<"aaaa"<<endl;
    // cout<<head->data<<"bbbb"<<endl;
    
    while(head){
        cout<<head->data<<endl;
        head=head->next;
    }
    
    
    return 0;
}
